<div id="index_task_lists">

  <h1>My Lists</h1>
    <%=link_to "Create Task List", new_task_list_path%>

   <% @task_lists.each do |task_list| %>

      <section class="task-list">
        <h1><%= task_list.name %></h1>
        <%= link_to "Edit", edit_task_list_path(task_list.id)%>
        <%= link_to "New Task", new_task_list_task_path(task_list.id)%>
        <%task_list.tasks.each do |task|%>
          <li><%=task.description%> - <%=(task.due_date - Date.today).to_i%> days </li>
        <%end%>
      </section>

    <% end %>
</div>