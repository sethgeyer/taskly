<div id="index_task_lists">

  <h1>My Lists</h1>
    <%=link_to "Create Task List", new_task_list_path%>

   <% @task_lists.each do |task_list| %>

      <section class="task-list">
        <h1><%= link_to task_list.name, task_list_path(task_list) %></h1>
        <%= link_to "Edit", edit_task_list_path(task_list)%>
        <%= link_to "New Task", new_task_list_task_path(task_list)%>
        <%task_list.tasks.each do |task|%>
          <li>
            <%=task.description%> - <%=(task.due_date - Date.today).to_i%> days
            <%=form_for [task_list, task], method:"DELETE" do |f|%>
              <%=f.submit "Delete"%>
            <%end%>
          </li>
        <%end%>
      </section>

    <% end %>
</div>