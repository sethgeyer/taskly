<div id="new_tasks">

<h1><%=@task_list.name%></h1>

    <%if @task.errors[:description].any?%>
      <p class="errors">Your task could not be created</p>
    <%end%>

    <%= form_for [@task_list, @task] do |f|%>
      <div >
        <%=f.label :description%>
        <%=f.text_field :description%>
        <div class="errors"><%=@task.errors[:description].first if @task.errors[:description]%></div>
      </div>
      <br/>
      <div>
        <%=f.label :due_date%><br/>
        <%=select_date Date.today, prefix: :due_date%>
      </div>
        <br/>
      <div>
        <%=f.submit%>
      </div>
    <%end%>





</div>